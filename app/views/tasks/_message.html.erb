<% if current_user.id != message.user_id %>
  <strong> <%= message.user.full_name %> </strong>
  <small><%= message.created_at.strftime("%H:%M %d.%m.%y") %></small>
  <p id="collocutors_message_decoration"> <%= message.text %> </p>
<% else %>
  <strong class="pull-right"><%= message.user.full_name %></strong>
  <small>
  <%= message.created_at.strftime("%H:%M %d.%m.%y") %></small>
  <p id="owners_message_decoration"> <%= message.text %> </p>
<% end %>
